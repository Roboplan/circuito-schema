{
  "definitions": {
    "supportedControllers": {
      "type": "array",
      "title": "Supported Controllers",
      "items": {
        "type": "string",
        "enum": [
          "ATMega328P",
          "ArduinoLeonardo",
          "ArduinoMega",
          "ArduinoMicro",
          "ArduinoNano",
          "ArduinoProMini5v",
          "ArduinoUno",
          "Arduino101",
          "ATTiny85",
          "Teensy32",
          "ArduinoGemma",
          "ArduinoProMini3v3",
          "ESP32DevKitC",
          "NodeMCU",
          "RPI3B"
        ]
      },
      "uniqueItems": true
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": ["name"],
  "properties": {
    "name": { "type": "string", "title": "Name" },
    "path": {
      "type": "string"
    },
    "supportedControllers": {
      "$ref": "#/definitions/supportedControllers"
    },
    "files": {
      "type": "array",
      "title": "Library files",
      "items": { "type": "string" }
    },
    "license": { "type": "string", "title": "License", "default": "" },
    "instantiate": {
      "type": "object",
      "title": "Variable generation settings",
      "additionalProperties": false,
      "properties": {
        "classname": { "type": "string", "title": "Class name {{classname}}" },
        "varname": { "type": "string", "title": "Variable name {{varname}}" }
      }
    },
    "includeHeaders": {
      "type": "array",
      "title": "Include header files",
      "description": "Files to #include in firmware.ino (from coder files or global library files)",
      "items": { "type": "string" }
    },
    "code": {
      "type": "object",
      "title": "Code snippets",
      "additionalProperties": false,
      "properties": {
        "global": {
          "type": "string",
          "title": "Global",
          "description": "{{coder.code.global}}"
        },
        "constructors": {
          "type": "string",
          "title": "Constructors",
          "description": "{{coder.code.constructors}}"
        },
        "setup": {
          "type": "string",
          "title": "Setup",
          "description": "{{coder.code.setup}}"
        },
        "snippetCode": {
          "type": "string",
          "title": "Snippet",
          "description": "{{coder.code.snippet}}"
        }
      }
    }
  }
}
