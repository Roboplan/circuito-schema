{
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "bom", "category"],
  "properties": {
    "name": { "type": "string", "title": "Name" },
    "path": {
      "type": "string"
    },
    "displayName": { "type": "string", "title": "Display Name" },
    "desc": { "type": "string", "title": "Description" },
    "symbol": {
      "type": "string",
      "title": "SVG Symbol",
      "description": "SVG Symbol URL see circuito.io/blog/SVG-Guidelines"
    },
    "category": {
      "title": "Category",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "output",
          "input",
          "support",
          "power",
          "controller",
          "connectivity"
        ]
      },
      "uniqueItems": true
    },
    "placing": {
      "title": "Part placing configuration",
      "type": "object",
      "properties": {
        "onBreadboard": {
          "type": "boolean",
          "title": "Place part on breadboard",
          "default": false
        }
      },
      "dependencies": {
        "onBreadboard": {
          "oneOf": [
            {
              "properties": {
                "onBreadboard": {
                  "enum": [false]
                }
              }
            },
            {
              "additionalProperties": false,
              "properties": {
                "onBreadboard": {
                  "enum": [true]
                },
                "row": {
                  "type": "integer",
                  "title": "Breadboard row",
                  "description": "{{part.row}}",
                  "enum": [0, 1, 2, 3, 4],
                  "enumNames": [
                    "0 (top row)",
                    "1",
                    "2",
                    "3",
                    "4 (adjacent to middle gap)"
                  ]
                },
                "rotation": {
                  "type": "integer",
                  "title": "Breadboard rotation",
                  "description": "{{part.rotation}}",
                  "enum": [0, 90, 180, 270]
                }
              }
            }
          ]
        }
      }
    },
    "bom": {
      "type": "array",
      "title": "BoM (Suppliers List)",
      "minItems": 1,
      "items": {
        "type": "object",
        "title": "BoM data (Supplier)",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "title": "Supplier",
            "default": "",
            "enum": ["octopart", "digikey", "other"]
          },
          "image": { "type": "string", "title": "Image" },
          "SKU": { "type": "string", "default": "" },
          "link": { "type": "string", "title": "Link", "default": "" },
          "price": { "type": "string", "title": "Price (USD)", "default": "" },
          "packOf": {
            "type": "integer",
            "title": "Number of items in package",
            "default": 1
          },
          "headers": {
            "type": "object",
            "title": "Headers",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "title": "Headers type",
                "enum": ["FemaleHeaders", "MaleHeaders", "MaleHeadersTall"],
                "enumNames": [
                  "Female Headers (normal)",
                  "Male Headers (normal)",
                  "Male Headers (tall)"
                ]
              },
              "qty": { "type": "integer", "title": "Headers quantity" }
            }
          }
        }
      }
    },
    "info": {
      "type": "object",
      "title": "",
      "additionalProperties": false,
      "required": ["setup", "test"],
      "properties": {
        "setup": {
          "type": "string",
          "title": "Setup info",
          "description": "Steps to prepare the part for use - soldering, correct orientation/placement tips etc.",
          "default": ""
        },
        "test": {
          "type": "string",
          "title": "Test info",
          "description": "Special instruction on how to test the part once circuit is ready",
          "default": ""
        }
      }
    },
    "bomAux": {
      "type": "array",
      "title": "Auxilary BoM parts",
      "description": "Bundle parts with no electrical connectivity - bolts, heatsinks etc.",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "notes": { "type": "string", "title": "Notes" }
  }
}
